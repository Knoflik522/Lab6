@model List<Lab6.Models.Product>

<h2>Заповніть інформацію про товари</h2>
<form asp-action="AddProducts" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label asp-for="@Model[i].Name">Назва товару:</label>
            <input asp-for="@Model[i].Name" class="form-control" required />
            <br />
            <label asp-for="@Model[i].Quantity">Кількість:</label>
            <input asp-for="@Model[i].Quantity" type="number" min="1" class="form-control" required />
            <br />
        </div>
        <hr />
    }
    <button type="submit" class="btn btn-primary">Підтвердити</button>
</form>
